{
  "extends": "auth0",
  "parser": "babel-eslint",
  "rules": {
    "max-len": ["error", 120, 4],
    "generator-star-spacing": "off",
    "react/jsx-filename-extension": "off",
    "import/no-named-as-default": "off",
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": ["tools/*.js", "test/*.js"]
    }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      }
    }
  }
}
